<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Primary button-->
    <style name="ButtonPrimary" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@animator/text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!--Autocomplete Dropdown-->
    <style name="DropDownStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/error</item>
        <item name="android:dividerHeight">2dp</item>
    </style>
</resources>
