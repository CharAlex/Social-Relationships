<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/lg_padding">

    <View
        android:id="@+id/personal_account"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/lg_padding"
        android:background="@drawable/bg_avatar"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/emoji_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/personal_account"
        app:layout_constraintEnd_toEndOf="@+id/personal_account"
        app:layout_constraintStart_toStartOf="@+id/personal_account"
        app:layout_constraintTop_toTopOf="@+id/personal_account" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lg_padding"
        android:layout_marginLeft="@dimen/lg_padding"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/personal_account"
        app:layout_constraintTop_toTopOf="@+id/personal_account"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lg_padding"
        android:layout_marginLeft="@dimen/lg_padding"
        android:text="Invite me!"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/personal_account"
        app:layout_constraintStart_toEndOf="@+id/personal_account"
        app:layout_constraintTop_toBottomOf="@+id/username" />

</androidx.constraintlayout.widget.ConstraintLayout>